<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.FullDetails"
    android:background="#fafafa">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/user_label"
                        android:id="@+id/tv_user_label"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="B" />

                    <TextView
                        android:id="@+id/tv_user_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:layout_toRightOf="@id/tv_user_label"
                        android:gravity="start"
                        android:text="Benjamin Masebinu"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:layout_toEndOf="@id/tv_user_label" />

                    <include
                        android:id="@+id/horizontal_divider"
                        android:layout_below="@+id/tv_user_label"
                        layout="@layout/include_divider"
                        android:layout_height="1dp"
                        android:layout_width="match_parent"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/horizontal_divider">

                        <TextView
                            android:id="@+id/tv_user_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="08068678931" />

                        <include
                            android:id="@+id/hori_divider"
                            layout="@layout/include_vertical_divider" />

                        <TextView
                            android:id="@+id/tv_user_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="bmasebinu@gmail.com" />

                    </LinearLayout>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardElevation="5dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageButton
                        style="@style/icon_action_style"
                        android:id="@+id/action_icon_calls"
                        app:layout_constraintEnd_toStartOf="@+id/action_icon_sms"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ic_calls" />

                    <TextView
                        android:id="@+id/action_text_calls"
                        style="@style/text_action_style"
                        android:text="@string/calls"
                        app:layout_constraintEnd_toEndOf="@+id/action_icon_calls"
                        app:layout_constraintStart_toStartOf="@+id/action_icon_calls"
                        app:layout_constraintTop_toBottomOf="@+id/action_icon_calls" />

                    <ImageButton
                        android:id="@+id/action_icon_sms"
                        style="@style/icon_action_style"
                        app:layout_constraintEnd_toStartOf="@+id/action_icon_mail"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/action_icon_calls"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_sms" />

                    <TextView
                        android:id="@+id/action_text_sms"
                        android:text="@string/sms"
                        style="@style/text_action_style"
                        app:layout_constraintEnd_toEndOf="@+id/action_icon_sms"
                        app:layout_constraintStart_toStartOf="@+id/action_icon_sms"
                        app:layout_constraintTop_toBottomOf="@+id/action_icon_sms" />

                    <ImageButton
                        android:id="@+id/action_icon_mail"
                        style="@style/icon_action_style"
                        app:layout_constraintEnd_toStartOf="@+id/action_icon_whatsapp"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/action_icon_sms"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_mail" />

                    <TextView
                        android:id="@+id/action_text_mail"
                        style="@style/text_action_style"
                        android:text="@string/mail"
                        app:layout_constraintEnd_toEndOf="@+id/action_icon_mail"
                        app:layout_constraintStart_toStartOf="@+id/action_icon_mail"
                        app:layout_constraintTop_toBottomOf="@+id/action_icon_mail" />

                    <ImageButton
                        android:id="@+id/action_icon_whatsapp"
                        style="@style/icon_action_style"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/action_icon_mail"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_whatsapp" />

                    <TextView
                        style="@style/text_action_style"
                        android:id="@+id/action_text_whatsapp"
                        android:text="@string/whatsapp"
                        app:layout_constraintEnd_toEndOf="@+id/action_icon_whatsapp"
                        app:layout_constraintStart_toStartOf="@+id/action_icon_whatsapp"
                        app:layout_constraintTop_toBottomOf="@+id/action_icon_whatsapp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="4dp"
                android:layout_marginTop="5dp"
                app:cardElevation="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_service_type"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    tools:listitem="@layout/sevice_type_layout"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:drawableLeft="@drawable/ic_event_type"
                        android:drawablePadding="8dp"
                        android:id="@+id/tv_event_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Birthday Party"/>

                    <TextView
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:drawableLeft="@drawable/ic_date"
                        android:drawablePadding="8dp"
                        android:id="@+id/tv_event_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20th Nov, 2018"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/ic_location"/>
                        <TextView
                            android:id="@+id/tv_event_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:text="The Zone Tech pack, Gbagada Lagos State, Nigeria The Zone Tech pack, Gbagada Lagos State, NigeriaThe Zone Tech pack, Gbagada Lagos State, Nigeria"/>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</layout>