<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_user_request_label"
                style="@style/user_label"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="B" />

            <TextView
                android:id="@+id/item_user_request_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:layout_toRightOf="@id/item_user_request_label"
                android:gravity="start"
                android:text="Benjamin Masebinu"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <include
                android:id="@+id/vertical_divider"
                android:layout_below="@+id/item_user_request_label"
                layout="@layout/include_divider"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_user_request_event_types_recycler"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/vertical_divider"
                android:layout_margin="8dp"
                tools:listitem="@layout/sevice_type_layout"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>